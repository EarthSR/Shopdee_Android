<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:gravity="center_horizontal">

<androidx.cardview.widget.CardView
android:id="@+id/cardView"
android:layout_width="match_parent"
android:layout_height="400dp"
android:layout_marginLeft="16dp"
android:layout_marginRight="16dp"
android:layout_marginBottom="24dp"
app:cardCornerRadius="12dp"
app:cardElevation="8dp"
android:layout_gravity="center"
android:backgroundTint="@android:color/holo_blue_light">

<ImageView
    android:id="@+id/imageViewFile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:adjustViewBounds="true"
    android:scaleType="centerCrop"
    tools:srcCompat="@tools:sample/avatars" />
</androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="กางเกงขายาว"
        android:textColor="#787171"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="$200"
        android:textColor="#1999FF"
        android:textSize="20sp"
        android:textStyle="bold" />

<TextView
android:id="@+id/txtProductDetail"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="สีขาว ผ้ายืด ขนาด M"
android:textSize="18sp"
android:textColor="@android:color/darker_gray"
    android:layout_gravity="start"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="8dp" />

<TextView
android:id="@+id/amount"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="5 รายการ"
android:textSize="18sp"
android:textColor="@android:color/darker_gray"
    android:layout_gravity="start"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="8dp" />

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:gravity="center"
android:layout_marginTop="16dp"
android:layout_marginBottom="16dp"
android:orientation="horizontal">

    <Button
        android:id="@+id/btnRemoveProduct"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#269FFF"
        android:text="-"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

<EditText
    android:id="@+id/editQuantity"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:textAlignment="center"
    android:background="@null"
    android:textStyle="bold"
    android:textSize="20sp"
    android:text="1"
    android:fontFamily="sans-serif-light"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp" />

    <Button
        android:id="@+id/btnAddProduct"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#269FFF"
        android:text="+"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
</LinearLayout>

    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="#269FFF"
        android:text="เพิ่มไปยังตะกร้า"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
    </LinearLayout>
